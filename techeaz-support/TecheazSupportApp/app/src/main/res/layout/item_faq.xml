<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- FAQ Header (Always Visible) -->
        <LinearLayout
            android:id="@+id/faq_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <!-- Category Badge -->
            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="❓ General"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/category_badge_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginBottom="8dp"
                tools:text="❓ General Questions" />

            <!-- Question and Expand Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="How do I get started with Techeaz?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:lineSpacing="1.2"
                    tools:text="How do I get started with Techeaz?" />

                <ImageView
                    android:id="@+id/iv_expand_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_expand_more"
                    android:contentDescription="@string/cd_expand_faq"
                    app:tint="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- FAQ Content (Expandable) -->
        <LinearLayout
            android:id="@+id/faq_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:animateLayoutChanges="true">

            <!-- Answer -->
            <TextView
                android:id="@+id/tv_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:text="Welcome to Techeaz! To get started, simply create an account on our website..."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:lineSpacing="1.4"
                tools:text="Welcome to Techeaz! To get started, simply create an account on our website, verify your email address, and follow our quick setup guide. You'll be up and running in minutes!" />

            <!-- Tags -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="4dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <!-- Footer with Last Updated and Helpful Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_last_updated"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Updated: 01/15/2024"
                    android:textSize="12sp"
                    android:textColor="@color/text_hint"
                    tools:text="Updated: 01/15/2024" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/faq_helpful_question"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_helpful_yes"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/cd_helpful_yes"
                        app:icon="@drawable/ic_thumb_up"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="16dp"
                        style="@style/Widget.Material3.Button.IconButton.Outlined" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_helpful_no"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/cd_helpful_no"
                        app:icon="@drawable/ic_thumb_down"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="16dp"
                        style="@style/Widget.Material3.Button.IconButton.Outlined" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>